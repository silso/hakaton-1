{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "lib",
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"allowJs": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@shared/*": ["../shared/src/*"]
		}
	},
	"include": [
		"src",
		"test"
	]
}
